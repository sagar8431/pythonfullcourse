import string
import itertools
import time

# Hidden password
password = "rcb"

characters = string.ascii_lowercase

print("Cracking password...")

start_time = time.time()

attempts = 0

for guess in itertools.product(characters, repeat=len(password)):
    attempts += 1
    guess = "".join(guess)
    
    if guess == password:
        break

end_time = time.time()

print("Password found:", guess)
print("Attempts:", attempts)
print("Time taken:", round(end_time - start_time, 4), "seconds")
